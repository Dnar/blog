<h1>new article</h1>

<%= form_for :article, url: articles_path do |f| %> <!-- articles_path = '/articles' -->
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br />
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit 'Опубликовать' %>
	</p>

<% end %>