<h1><%= @article.title %></h1>
<p>
	<%= @article.text %>
</p>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
	<p>
		<i><%= comment.author %> said: </i><br />
		<%= comment.body %>
	</p>
<% end %>

<% if user_signed_in? %>

	<h2>Add comment</h2>

	<%= form_for ([@article, @article.comments.build]) do |f| %> <!-- articles_path = '/articles' -->
		<p>
			<%= current_user.username.capitalize! %><br />
			
		</p>

		<p>
			<%= f.text_area :body %>
		</p>

		<p>
			<%= f.submit 'Комментировать' %>
		</p>

<% end %>

<% end %>